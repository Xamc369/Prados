@model IEnumerable<Prados.Web.Data.Entities.Propietariostbl>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
<br />

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i></a>
</p>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Propietarios</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="tblpropietarios">
                    <thead>
                        <tr>
                            @*<th>
            @Html.DisplayNameFor(model => model.Id)
        </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.User.Pro_Lote)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.User.NombreCompleto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.User.Pro_Identificacion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.User.Pro_Telefono)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.User.TipViv.TipV_Descripcion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.User.TipPer.TipP_Descripcion)
                            </th>
                            <th>
                                # Vehiculos
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            @*<td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.User.Pro_Lote)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.NombreCompleto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.Pro_Identificacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.Pro_Telefono)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.TipViv.TipV_Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.TipPer.TipP_Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Vehiculos.Count)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="glyphicon glyphicon-edit"></i></a> |
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success"><i class="glyphicon glyphicon-list-alt"></i></a> |
                                <button data-id="@item.Id" class="btn btn-danger deleteItem" data-toggle="modal" data-target="#deleteDialog"><i class="glyphicon glyphicon-trash"></i></button>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!--Delete Item-->
<div class="modal fade" id="deleteDialog" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete Item</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Do you want to delete the record?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" id="btnYesDelete">Delete</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#tblpropietarios').DataTable();

            // Delete item
            var item_to_delete;

            $('.deleteItem').click((e) => {
                item_to_delete = e.currentTarget.dataset.id;
            });

            $("#btnYesDelete").click(function () {
                window.location.href = '/Propietarios/Delete/' + item_to_delete;
            });
        });
    </script>
}
