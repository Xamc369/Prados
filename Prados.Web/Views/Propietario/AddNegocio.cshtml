@model Prados.Web.Models.NegocioViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Registrar</h2>

<h4>Negocio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNegocio" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PropietarioId" />

            <div class="form-group">
                <label asp-for="Neg_Nombre" class="control-label"></label>
                <input asp-for="Neg_Nombre" class="form-control" />
                <span asp-validation-for="Neg_Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Neg_Descripcion" class="control-label"></label>
                <textarea asp-for="Neg_Descripcion" class="form-control"></textarea>
                <span asp-validation-for="Neg_Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" type="file" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Neg_Telefono" class="control-label"></label>
                <input asp-for="Neg_Telefono" class="form-control" />
                <span asp-validation-for="Neg_Telefono" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Neg_Direccion" class="control-label"></label>
                <input asp-for="Neg_Direccion" class="form-control" />
                <span asp-validation-for="Neg_Direccion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.PropietarioId" class="btn btn-success">Back to Owner</a>
            </div>
        </form>
    </div>
</div>


